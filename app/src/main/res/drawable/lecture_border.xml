<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: Cream color background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ded1a2" /> <!-- Cream color -->
        </shape>
    </item>
    <!-- Layer 2: Black border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="#000000"
                android:width="2dp" /> <!-- Black border -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
